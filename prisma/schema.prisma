// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  created     DateTime  @default(now())
  handle      String    @unique
  authuuid    String?
  Profile     Profile[]
  Social      Social[]
  Wallet      Wallet[]

  @@map("users")
}

model Profile {
  id         String   @id @default(uuid())
  userid     String
  created    DateTime @default(now())
  theme      String?  // Optional field
  background String?  // Optional field
  image      String?  // Optional field
  user       User     @relation(fields: [userid], references: [id], onDelete: Cascade)
  
  @@map("profiles")
}

model Social {
  id                String   @id @default(uuid())
  userid            String
  networkid         String?
  particle_token    String?
  particle_uuid     String?
  created           DateTime @default(now())
  name              String?  // Optional field
  platform          String?  // Optional field
  imageurl          String?  // Optional field for storing image URLs
  user              User     @relation(fields: [userid], references: [id], onDelete: Cascade)
  
  @@map("socials")
}

model Wallet {
  id       String    @id @default(uuid())
  userid   String
  address  String    
  network  String?   // Optional field
  created  DateTime? @default(now())
  user     User      @relation(fields: [userid], references: [id], onDelete: Cascade)

  @@map("wallets")
}
